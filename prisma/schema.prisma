generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id           Int      @id @default(autoincrement())
  recipe_name         String
  img          String
  raw_material String
  step         String
  duration     Duration @relation(fields: [durationId], references: [id])
  durationId   Int      @unique
  difficult    Level    @relation(fields: [levelId], references: [id])
  levelId      Int      @unique
  user         User     @relation(fields: [userId], references: [id])
  userId       Int      @unique 
  updated_at    DateTime @updatedAt @default(now())
}

model Duration {
  id         Int     @id @default(autoincrement())
  time_start Int
  time_end   Int
  duration   Recipe?
}

model Level {
  id         Int     @id @default(autoincrement())
  level_name String
  level      Recipe?
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  salt     String
  role     String @default("member")
  user_name     String
  user     Recipe?
}
