generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id    Int               @id
  name         String
  img          String
  raw_material String
  step         String
  duration     String
  difficult    Level @relation(fields: [levelId], references: [id])
  levelId Int @unique
}

model Duration {
  id Int @id
  time        Int
}

model Level {
  id Int   @id
  level_name    String
  level         Recipe?
}
